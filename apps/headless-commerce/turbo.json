{
  "$schema": "https://turbo.build/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "lint": {
      "env": [
        "AKAMAI_*",
        "EDGE_CONFIG",
        "NEXT_*",
        "NODE_ENV",
        "REVALIDATION_API_KEY",
        "SESSION_HOSTNAME",
        "SFCC_*",
        "VERCEL_ENV"
      ]
    },
    "test": {
      "env": [
        "AKAMAI_*",
        "EDGE_CONFIG",
        "NEXT_*",
        "NODE_ENV",
        "REVALIDATION_API_KEY",
        "SESSION_HOSTNAME",
        "SFCC_*",
        "VERCEL_ENV"
      ]
    },
    "build": {
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ],
      "env": [
        "AKAMAI_*",
        "EDGE_CONFIG",
        "NEXT_*",
        "NODE_ENV",
        "REVALIDATION_API_KEY",
        "SESSION_HOSTNAME",
        "SFCC_*",
        "VERCEL_ENV"
      ]
    }
  }
}