{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ],
      "env": [
        "AKAMAI_*",
        "EDGE_CONFIG",
        "NEXT_*",
        "NODE_ENV",
        "REVALIDATION_API_KEY",
        "SESSION_HOSTNAME",
        "SFCC_*",
        "VERCEL_ENV"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ],
      "env": [
        "AKAMAI_*",
        "EDGE_CONFIG",
        "NEXT_*",
        "NODE_ENV",
        "REVALIDATION_API_KEY",
        "SESSION_HOSTNAME",
        "SFCC_*",
        "VERCEL_ENV"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    }
  }
}