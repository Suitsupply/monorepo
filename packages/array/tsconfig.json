{
  "extends": "../../tsconfig.base.json",
  "include": [
    "./**/*.js",
    "./**/*.cjs",
    "./**/*.mjs",
    "./**/*.jsx",
    "./**/*.ts",
    "./**/*.mts",
    "./**/*.cts",
    "./**/*.tsx"
  ],
  "exclude": ["./coverage"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "incremental": true,
    "isolatedModules": true
  }
}
