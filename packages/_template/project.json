{
  "name": "@susu/package-template",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/_template/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["{projectRoot}/src/**/*"]
    },
    "test": {
      "dependsOn": ["^test", "lint"],
      "inputs": ["{projectRoot}/src/**/*"]
    },
    "test-coverage": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["pnpm run test-coverage"],
        "cwd": "packages/_template",
        "forwardAllArgs": true
      },
      "dependsOn": ["^test-coverage", "lint"],
      "inputs": ["{projectRoot}/src/**/*"]
    },
    "build": {
      "dependsOn": ["^build", "test"],
      "inputs": ["{projectRoot}/src/**/*"]
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["pnpm dev"],
        "cwd": "packages/_template",
        "forwardAllArgs": true
      },
      "dependsOn": ["lint"]
    }
  },
  "tags": []
}
